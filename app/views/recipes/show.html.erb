<%= render partial: "devise/shared/header", locals: { recipe: @recipe } %>

<div class="recipe-show">
  <!--画像-->
  <div class="recipe-img-content">
    <%= image_tag @recipe.image, class:"recipe-box-img" %>
  </div>

  <!--料理名-->
  <div class="show-text">
  </div>
  <h2 class="d-name">
    <%= @recipe.dish%>
  </h2>

  <!--人数-->
  <div class="show-text">
    人数
  </div>
  <div class="r-persons">
    <%= @recipe.persons%>
  </div>

  <!--材料-->
  <div class="show-text">
    材料
  </div>
  <div class="r-material">
    <%= @recipe.material%>
  </div>

  <!--分量-->
  <div class="show-text">
    分量
  </div>
  <div class="r-amount">
    <%= @recipe.amount%>
  </div>

  <!--作り方-->
  <div class="show-text">
    作り方
  </div>
  <div class="r-make-box">
    <div class="show-text">
      その１
    </div>
    <div class="r-make1">
      <%= @recipe.make_one%>
    </div>

    <div class="show-text">
      その２
    </div>
    <div class="r-make2">
      <%= @recipe.make_two%>
    </div>

  <!-- レシピ３〜４、データがあれば表示-->
    <% if @recipe.make_three.present? %>
      <div class="show-text">
        その３
      </div>
      <div class="r-make3">
        <%= @recipe.make_three%>
      </div>
    <% end %>

    <% if @recipe.make_four.present? %>
      <div class="show-text">
        その４
      </div>
      <div class="r-make4">
        <%= @recipe.make_four%>
      </div>
    <% end %>

    <% if @recipe.make_five.present? %>
      <div class="show-text">
        その５
      </div>
      <div class="r-make5">
        <%= @recipe.make_five%>
      </div>
    <% end %>

  <!-- レシピ３〜４、データがあれば表示-->

    <div class="recipe-contributor">
      レシピ作成者
    </div>
    <div class="recipe-user">
      <%= @recipe.user.nick_name%>
    </div>

  </div>

  <% if  user_signed_in? &&  current_user.id == @recipe.user_id %>
    <%= link_to "レシピを編集する", edit_recipe_path(@recipe.id), method: :get, class: "recipe-red-btn" %>
    <%= link_to "レシピを削除する", recipe_path(@recipe.id), method: :delete, data: { confirm: '本当に削除しますか？' }, class:"recipe-destroy" %>
  <% end %>
</div>

<%= render partial: "devise/shared/footer"%>